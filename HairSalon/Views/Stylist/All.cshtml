@{
    Layout = "_Layout";
}
<div class='container' id="stylist-container">
    <h1>All Stylists</h1>
    <div class="row titles">
        <div class="col-md-5">
            <h3>Stylist Name</h3>
        </div>
        <div class="col-md-3">
            <h3>Stylist Id</h3>
        </div>
    </div>
    @foreach (var stylist in Model)
    {
    <div class="row data">
        <div class="col-md-5">
            <h4 class="name"><a href="/stylist/all/@stylist.GetId()/details">@stylist.GetName()</a></h4>
        </div>
        <div class="col-md-3">
            <p>@stylist.GetId()</p>
        </div>
    </div>
    }
</div>
