@{
    Layout = "_Layout";
}
<div class="container" id="stylist-container"
    <div class="row">
        <div class="col-sm-12">
            <h2>@Model["selectedStylist"].GetName()</h2>
            <hr />
            <form action="/stylist/all/@Model["selectedStylist"].GetId()/update" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" name="name" value="@Model["selectedStylist"].GetName()" required>
                </div>
                <div class="form-group">
                    <label for="name">Details:</label>
                    <input type="text" name="details" value="@Model["selectedStylist"].GetDetails()" required>
                </div>
                <div>
                    <label for="specialtyId">Add a Specialty</label>
                    <select class="form-group" name="specialtyId">
                        @foreach (var specialty in Model["allSpecialties"])
                        {
                        <option value="@specialty.Id">@specialty.Description</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
            <form class="inline-form-button" action="/stylist/all/@Model["selectedStylist"].GetId()/delete" method="post">
                <button class="btn btn-warning" type="submit">Delete Stylists</button>
            </form>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
</div>